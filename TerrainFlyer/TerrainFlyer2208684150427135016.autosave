void setup() {
    // initialize the game
    size(1280, 720, P3D);
    frameRate(60);
}

void draw() {
    background(255);
    drawAxis();
}

// Debug axis
void drawAxis() {
    // x axis
    stroke(255, 0, 0);
    line(0, 0, 0, 100, 0, 0);

    // y
    stroke(0, 255, 0);
    line(0, 0, 0, 0, 100, 0);

    // z
    stroke(0, 0, 255);
    line(0, 0, 0, 0, 0, -100);
}